@model UpdateSpecialOfferDto
@{
    ViewData["Title"] = "UpdateSpecialOffer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<main class="flex-1 p-6">
    @await Component.InvokeAsync("_AdminLayoutMainSectionViewbagComponentPartial")
    <div class="bg-white h-full p-6">
        <!-- Başlık -->
        <h2 class="text-2xl font-bold mb-4 text-wht-800">SpecialOffer Düzenleme</h2>

        <!-- Form - soldan başlayan, genişleyen tasarım -->
        <form method="post" class="w-full bg-white rounded-lg shadow-md p-6">
            <div>
                <input type="hidden" readonly asp-for="SpecialOfferId" />
            </div>
            <div class="mb-4">
                <label for="specialOffer" class="block text-gray-700 text-sm font-bold mb-2">
                    Teklif adı
                </label>
                <input type="text"
                       asp-for="Title"
                       id="specialOffer"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Teklif Adı giriniz">

            </div>
            <div class="mb-4">
                <label for="specialOffer" class="block text-gray-700 text-sm font-bold mb-2">
                    Teklif alt adı
                </label>
                <input type="text"
                       asp-for="SubTitle"
                       id="specialOffer"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Teklif Sub Ad giriniz">

            </div>
            <div class="mb-4">
                <label for="specialOffer" class="block text-gray-700 text-sm font-bold mb-2">
                    Teklif Gösel
                </label>
                <input type="text"
                       asp-for="ImageUrl"
                       id="specialOffer"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Teklif Görseli giriniz">

            </div>

            <!-- Buton - altta konumlandırıldı -->
            <div class="mt-6">
                <button type="submit"
                        class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-6 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-200">
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</main>

