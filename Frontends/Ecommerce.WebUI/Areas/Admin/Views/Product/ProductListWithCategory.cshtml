@model List<ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "ProductListWithCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<main class="flex-1 p-6">
    @await Component.InvokeAsync("_AdminLayoutMainSectionViewbagComponentPartial")
    <div class="bg-white h-full p-6">
        <!-- Tablo -->
        <table class="w-full border-collapse bg-white shadow-md rounded-lg overflow-hidden">
            <thead>
                <tr class="bg-gray-800 text-white">
                    <th class="px-4 py-3 text-left">#</th>
                    <th class="px-4 py-3 text-left">Name</th>
                    <th class="px-4 py-3 text-center">Price</th>
                    <th class="px-4 py-3 text-center">Category</th>
                    <th class="px-4 py-3 text-center">Info and Desc</th> 
                    <th class="px-4 py-3 text-center">Update</th>
                    <th class="px-4 py-3 text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr class="border-b hover:bg-gray-50 transition-colors">
                        <td class="px-4 py-3">@count</td>
                        <td class="px-4 py-3 font-medium">@item.ProductName</td>
                        <td class="px-4 py-3 font-medium text-center">@item.ProductPrice</td>
                        <td class="px-4 py-3 font-medium text-center">@item.Category.CategoryName</td>
                        <td class="px-4 py-3 text-center">
                            <a href="/Admin/ProductDetail/UpdateProductDetail/@item.ProductId" class="inline-block px-4 py-2 bg-yellow-500 text-white rounded-md hover:bg-yellow-600 transition-colors">
                                <span class="flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                    Açıklama ve Bilgi
                                </span>
                            </a>
                        </td>

                        <td class="px-4 py-3 text-center">
                            <a href="/Admin/Product/UpdateProduct/@item.ProductId" class="inline-block px-4 py-2 bg-yellow-500 text-white rounded-md hover:bg-yellow-600 transition-colors">
                                <span class="flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                    Update
                                </span>
                            </a>
                        </td>
                        <td class="px-4 py-3 text-center">
                            <a href="/Admin/Product/DeleteProduct/@item.ProductId" class="inline-block px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition-colors">
                                <span class="flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                    Delete
                                </span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- Yeni Kategori butonu  -->
        <div class="flex justify-end mt-4">
            <a href="/Admin/Product/CreateProduct/"
               class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-200">
                Yeni Ürün
            </a>
        </div>
    </div>
</main>