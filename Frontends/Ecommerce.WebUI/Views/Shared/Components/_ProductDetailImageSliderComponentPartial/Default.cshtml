@model GetByIdProductImageDto

<div class="md:w-1/2">
    <div class="flex gap-2">
        <!-- Thumbnails Column (vertical) -->
        <div class="flex flex-col space-y-2">
            @if (Model != null)
            {
                <img src="@Model.ProductImage0" alt="Thumbnail 1" class="w-16 h-16 object-contain rounded cursor-pointer border-2 border-transparent hover:border-primary" onmouseover="changeImage(this)">
                <img src="@Model.ProductImage1" alt="Thumbnail 2" class="w-16 h-16 object-contain rounded cursor-pointer border-2 border-transparent hover:border-primary" onmouseover="changeImage(this)">
                <img src="@Model.ProductImage2" alt="xxxxx" class="w-16 h-16 object-contain rounded cursor-pointer border-2 border-transparent hover:border-primary" onmouseover="changeImage(this)">
                <img src="@Model.ProductImage3" alt="xxxx" class="w-16 h-16 object-contain rounded cursor-pointer border-2 border-transparent hover:border-primary" onmouseover="changeImage(this)">
            }
            else
            {
                <p>yok foto</p>
            }
        </div>
        <!-- Main Image Container (square) -->
        <div class="relative w-full aspect-square">
            <img id="mainImage" src="~/commerce/E-Commerce/img/iphone13pro.png" alt="iPhone 13 Pro" class="w-full h-full object-contain rounded-lg transition-transform duration-300">
            <button id="prevSlide" class="absolute left-2 top-1/2 w-10 h-10 transform -translate-y-1/2 bg-white p-2 rounded-full shadow hover:bg-gray-100">
                <i class="fas fa-chevron-left"></i>
            </button>
            <button id="nextSlide" class="absolute right-2 top-1/2 w-10 h-10 transform -translate-y-1/2 bg-white p-2 rounded-full shadow hover:bg-gray-100">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>
</div>
