@model List<ResultSpecialOfferDto>

@foreach(var item in Model)
{
    <section class="relative mb-12">
        <img src="@item.ImageUrl" alt="Banner" class="w-full h-48 object-cover rounded-lg">
        <div class="absolute inset-0 flex flex-col items-center justify-center">
            <h2 class="text-white text-3xl font-bold mb-2 drop-shadow-lg">@item.Title</h2>
            <p class="text-white text-xl mb-4 drop-shadow-lg">@item.SubTitle</p>
            <a href="#"
               class="bg-orange-500 text-white font-semibold py-2 px-4 rounded shadow transition duration-300 hover:bg-transparent hover:border hover:border-orange-500 hover:text-white">
                Hemen Al
            </a>
        </div>
    </section>
}