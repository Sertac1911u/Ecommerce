@model UpdateProductDto
<div class="md:w-1/2 flex flex-col">
    <h1 class="text-3xl font-bold mb-4">@Model.ProductName</h1>

    <!-- Fiyat Bölümü -->
    <div class="mb-4">
        <span class="text-red-500 block text-sm font-bold mb-1">Son 15: En Düşük Fiyat</span>
        <div class="flex items-center">
            <span class="text-gray-500 line-through mr-2">29.999 TL</span>
            <span class="text-3xl font-bold text-primary">@Model.ProductPrice TL</span>
        </div>
    </div>

    <div class="flex items-center mb-4">
        <!-- Rating: Tıklayınca yorumlara focus -->
        <div class="flex items-center text-yellow-400 cursor-pointer" id="focusReviews">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star-half-alt"></i>
        </div>
        <span class="ml-2 text-sm text-gray-600 cursor-pointer" id="focusReviewsText">4.7 (320 yorum)</span>
    </div>

    <!-- Renk Seçimi -->
    <div class="mb-4">
        <h3 class="font-medium mb-2">Renk Seçimi:</h3>
        <div class="flex space-x-2">

            <button class="color-option w-10 h-10 rounded-full border-2 border-transparent transition" onclick="selectColor(this)">
                <img src="~/commerce/E-Commerce/img/iphone13pro.png" alt="Mavi" class="w-full h-full object-contain rounded-full">
            </button>
            <button class="color-option w-10 h-10 rounded-full border-2 border-transparent transition" onclick="selectColor(this)">
                <img src="~/commerce/E-Commerce/img/iphone13pro.png" alt="Siyah" class="w-full h-full object-contain rounded-full">
            </button>
            <button class="color-option w-10 h-10 rounded-full border-2 border-transparent transition" onclick="selectColor(this)">
                <img src="~/commerce/E-Commerce/img/iphone13pro.png" alt="Beyaz" class="w-full h-full object-contain rounded-full">
            </button>
            <button class="color-option w-10 h-10 rounded-full border-2 border-transparent transition" onclick="selectColor(this)">
                <img src="~/commerce/E-Commerce/img/iphone13pro.png" alt="Beyaz" class="w-full h-full object-contain rounded-full">
            </button>
        </div>
    </div>


    <!-- Boyut Seçimi -->
    <div class="mb-4">
        <h3 class="font-medium mb-2">Boyut Seçimi:</h3>
        <div class="flex space-x-2">
            <button class="size-option px-4 py-2 border rounded transition" onclick="selectSize(this)">128GB</button>
            <button class="size-option px-4 py-2 border rounded transition" onclick="selectSize(this)">256GB</button>
            <button class="size-option px-4 py-2 border rounded transition" onclick="selectSize(this)">512GB</button>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center gap-4 mb-6">
        <button class="bg-primary text-white py-3 px-6 rounded-lg hover:bg-primary-dark transition add-to-cart">
            Sepete Ekle
        </button>
        <button class="text-gray-600 hover:text-red-500 transition">
            <i class="far fa-heart text-2xl"></i>
        </button>
    </div>

    <!-- Additional Product Info -->
    <div class="text-gray-700 mb-4">
        <p class="mb-2">Ürün Kodu: IP13P-256GB</p>
        <p class="mb-2">Ürün Açıklaması: @Model.ProductDescription</p>
        <p class="mb-2">Renk: Gümüş</p>
        <p class="mb-2">Stok Durumu: Stokta Var</p>
        <p class="mb-2">Kargo: Ücretsiz</p>
        <p class="mb-2">Boyutlar: 146.7 x 71.5 x 7.65 mm</p>
        <p class="mb-2">Ağırlık: 204 gram</p>
        <p class="mb-2">İşlemci: A15 Bionic</p>
        <p class="mb-2">Diğer Özellikler: ProMotion 120Hz ekran, üçlü arka kamera, Ceramic Shield</p>
    </div>
</div>
