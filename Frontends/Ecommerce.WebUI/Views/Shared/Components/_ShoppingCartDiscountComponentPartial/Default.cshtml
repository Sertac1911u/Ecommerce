<div class="md:w-1/3">
    <div class="border rounded-lg p-6 sticky top-32 cart-summary">
        <h3 class="text-xl font-semibold mb-4">Seçilen Ürünler (<span id="selectedCount">0</span>)</h3>
        <div class="mb-4">
            <div class="flex justify-between">
                <span>Ara Toplam</span>
                <span class="font-bold sub-total">0,00 TL</span>
            </div>
            <!-- Ürün İsimlerinin Listesi -->
            <div class="mt-2">
                <ul class="text-sm text-gray-700 space-y-1 product-list">
                    <!-- JavaScript ile güncellenecek -->
                </ul>
            </div>
        </div>
        <!-- Kupon Kodu Girişi -->
        <div class="mt-4">
            <input type="text" id="couponCode" placeholder="Kupon Kodu" class="w-full border rounded py-2 px-3" />
            <button onclick="applyCoupon()" class="w-full mt-2 bg-primary text-white py-2 rounded-lg hover:bg-secondary-dark transition">
                Kupon Uygula
            </button>
        </div>
        <button class="w-full bg-primary text-white py-3 rounded-lg hover:bg-primary-dark transition mt-4">
            Alışverişi Tamamla
        </button>
    </div>
</div>
