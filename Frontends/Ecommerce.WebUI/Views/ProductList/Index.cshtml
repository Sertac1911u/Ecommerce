@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="flex gap-8">
    <aside class="w-1/4 bg-white rounded-lg shadow-sm p-4 h-fit sticky top-32">
        <h2 class="text-lg font-semibold mb-4">Filtreler</h2>

        <!-- Kategoriler Filter -->
        <div class="mb-6">
            <h3 class="font-medium mb-2">Kategoriler</h3>
            <div class="space-y-2">
                <label class="flex items-center">
                    <input type="checkbox" class="mr-2 w-5 h-5 accent-primary">
                    <span>Telefonlar</span>
                </label>
                <label class="flex items-center">
                    <input type="checkbox" class="mr-2 w-5 h-5 accent-primary">
                    <span>Tabletler</span>
                </label>
                <label class="flex items-center">
                    <input type="checkbox" class="mr-2 w-5 h-5 accent-primary">
                    <span>Laptoplar</span>
                </label>
                <label class="flex items-center">
                    <input type="checkbox" class="mr-2 w-5 h-5 accent-primary">
                    <span>Aksesuarlar</span>
                </label>
            </div>
        </div>

        <!-- Fiyat Aralığı Filter -->
        @await Component.InvokeAsync("_ProductListPriceFilterComponentPartial")

        <!-- Markalar Filter -->
        @await Component.InvokeAsync("_ProductListBrandFilterComponentPartial")

        <!-- Değerlendirme Filter -->
        @await Component.InvokeAsync("_ProductListRatingFilterComponentPartial")
   
        <!-- Boyut Filter -->
        @await Component.InvokeAsync("_ProductListSizeFilterComponentPartial")

        <!-- Renk Filter -->
        @await Component.InvokeAsync("_ProductListColorFilterComponentPartial")

        <!-- İndirim Filter -->
        @await Component.InvokeAsync("_ProductListDiscountFilterComponentPartial")

    </aside>


    <!-- Products Grid (Sağ: %75) -->
    <section class="w-3/4">
        <!-- Sort Bar -->
        <div class="bg-white rounded-lg shadow-sm p-4 mb-6 flex items-center justify-between">
            <span>Arama Sonucları "Ekmek" (248 ürün bulundu)</span>
            <select class="border rounded p-2">
                <option>En Düşük Fiyat</option>
                <option>En Yüksek Fiyat</option>
                <option>En Çok Değerlendirilenler</option>
                <option>En Yeniler</option>
            </select>
        </div>

        <!-- Products Grid -->
        @await Component.InvokeAsync("_ProductListComponentPartial")

    </section>

</div>
